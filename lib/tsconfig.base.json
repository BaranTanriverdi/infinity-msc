{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "../",
    "paths": {
      "lib/*": ["lib/*"],
      "scripts/*": ["scripts/src/*"],
      "app/*": ["app/src/*"]
    }
  },
  "include": ["../lib", "../scripts/src", "../app/src"],
  "exclude": ["../node_modules", "../scripts/dist", "../app/.next"]
}
