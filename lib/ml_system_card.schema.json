{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ml-system-card.dev/schema/v1",
  "title": "ML System Card",
  "type": "object",
  "required": [
    "ai",
    "business",
    "devInsight",
    "governance",
    "integration",
    "meta",
    "mlCore",
    "provenance",
    "stakeholderNotes"
  ],
  "additionalProperties": false,
  "properties": {
    "ai": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "engine": { "type": ["string", "null"] },
        "runId": { "type": ["string", "null"] },
        "fieldMeta": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["path", "source", "confidence"],
            "additionalProperties": false,
            "properties": {
              "path": { "type": "string" },
              "source": {
                "type": "object",
                "required": ["kind"],
                "additionalProperties": false,
                "properties": {
                  "kind": {
                    "type": "string",
                    "enum": ["extracted", "inferred", "manual"]
                  }
                }
              },
              "confidence": {
                "type": "number",
                "minimum": 0,
                "maximum": 1
              },
              "repoSources": {
                "type": "array",
                "items": { "$ref": "#/definitions/anchor" }
              },
              "needs_review": { "type": "boolean" },
              "guard": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "locked": { "type": "boolean" },
                  "skip_generation": { "type": "boolean" },
                  "watch_paths": {
                    "type": "array",
                    "items": { "type": "string" }
                  },
                  "last_accept_commit": { "type": "string" }
                }
              }
            }
          }
        }
      }
    },
    "business": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "executiveSummary": {
          "type": ["string", "null"],
          "description": "A high-level, readable overview of the project, synthesizing its purpose, architecture, and key metrics."
        },
        "useCase": { "type": ["string", "null"] },
        "intendedUse": { "type": ["string", "null"] },
        "nonGoals": {
          "type": "array",
          "items": { "type": "string" }
        },
        "kpis": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "target", "current"],
            "additionalProperties": false,
            "properties": {
              "name": { "type": "string" },
              "target": { "type": "number" },
              "current": { "type": "number" },
              "owner": { "type": "string" }
            }
          }
        },
        "pilot": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "scope": { "type": "string" },
            "start": { "$ref": "#/definitions/date" },
            "end": { "$ref": "#/definitions/date" },
            "env": { "type": "string" }
          }
        },
        "outOfScopeUse": {
          "type": "array",
          "items": { "type": "string" }
        },
        "userPopulations": {
          "type": "array",
          "items": { "type": "string" }
        },
        "hazardousUseCases": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "devInsight": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "codeOverview": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "languages": {
              "type": "array",
              "items": { "type": "string" }
            },
            "entrypoints": {
              "type": "array",
              "items": { "type": "string" }
            },
            "components": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["name", "summary", "keyFiles"],
                "additionalProperties": false,
                "properties": {
                  "name": { "type": "string" },
                  "summary": { "type": "string" },
                  "keyFiles": {
                    "type": "array",
                    "items": { "type": "string" }
                  }
                }
              }
            }
          }
        },
        "architecture": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "publicApis": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["name", "path", "file"],
                "additionalProperties": false,
                "properties": {
                  "name": { "type": "string" },
                  "path": { "type": "string" },
                  "method": { "type": "string" },
                  "signature": { "type": "string" },
                  "file": { "type": "string" }
                }
              }
            },
            "dataFlow": {
              "type": "array",
              "items": { "type": "string" }
            },
            "depsSummary": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        },
        "qualitySignals": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "testsPresent": { "type": ["boolean", "null"] },
            "coverageHint": { "type": ["string", "number", "null"] },
            "complexityHints": {
              "type": "array",
              "items": { "type": "string" }
            },
            "todoHotspots": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        },
        "runtimePerf": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "latencyMsP50": { "type": ["number", "null"] },
            "latencyMsP95": { "type": ["number", "null"] },
            "notes": { "type": ["string", "null"] }
          }
        }
      }
    },
    "governance": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "policies": {
          "type": "array",
          "items": { "type": "string" }
        },
        "assessments": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["type", "result"],
            "additionalProperties": false,
            "properties": {
              "type": { "type": "string" },
              "result": { "type": "string" },
              "notes": { "type": "string" }
            }
          }
        },
        "riskRegister": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["item", "likelihood", "impact"],
            "additionalProperties": false,
            "properties": {
              "item": { "type": "string" },
              "likelihood": { "type": "number", "minimum": 0 },
              "impact": { "type": "number", "minimum": 0 },
              "mitigation": { "type": "string" },
              "owner": { "type": "string" }
            }
          }
        },
        "signOffs": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["role", "name", "timestamp"],
            "additionalProperties": false,
            "properties": {
              "role": { "type": "string" },
              "name": { "type": "string" },
              "timestamp": { "$ref": "#/definitions/dateTime" }
            }
          }
        }
      }
    },
    "integration": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "api": {
          "type": ["object", "null"],
          "additionalProperties": false,
          "properties": {
            "inputSchema": { "type": "string" },
            "outputSchema": { "type": "string" },
            "version": { "type": "string" }
          }
        },
        "security": {
          "type": ["object", "null"],
          "additionalProperties": false,
          "properties": {
            "auth": {
              "type": "string",
              "enum": ["apiKey", "oauth2", "mtls"]
            },
            "scopes": {
              "type": "array",
              "items": { "type": "string" }
            },
            "rateLimitRps": { "type": "number" }
          }
        },
        "errorModel": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["code", "httpStatus"],
            "additionalProperties": false,
            "properties": {
              "code": { "type": "string" },
              "httpStatus": { "type": "integer", "minimum": 100, "maximum": 599 },
              "retryable": { "type": "boolean" },
              "description": { "type": "string" }
            }
          }
        },
        "idempotency": {
          "type": ["object", "null"],
          "additionalProperties": false,
          "properties": {
            "supported": { "type": "boolean" },
            "keyHeader": { "type": "string" }
          }
        },
        "versioningPolicy": {
          "type": ["object", "null"],
          "additionalProperties": false,
          "properties": {
            "scheme": { "type": "string" },
            "notes": { "type": "string" }
          }
        },
        "operationalQualities": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "desiredDirection"],
            "additionalProperties": false,
            "properties": {
              "name": { "type": "string" },
              "definition": { "type": "string" },
              "desiredDirection": {
                "type": "string",
                "enum": ["maximize", "minimize", "target_range"]
              },
              "targets": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["operator", "threshold"],
                  "additionalProperties": false,
                  "properties": {
                    "context": { "type": "string" },
                    "operator": { "type": "string", "enum": ["<=", ">=", "in"] },
                    "threshold": {},
                    "unit": { "type": "string" }
                  }
                }
              },
              "measures": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["metricName", "value"],
                  "additionalProperties": false,
                  "properties": {
                    "metricName": { "type": "string" },
                    "methodRef": { "type": "string" },
                    "context": { "type": "string" },
                    "value": { "type": "number" },
                    "unit": { "type": "string" },
                    "timestamp": { "$ref": "#/definitions/dateTime" }
                  }
                }
              },
              "meetsTarget": { "type": "boolean" },
              "owner": { "type": "string" },
              "monitoringLink": { "type": "string" }
            }
          }
        },
        "fallbacks": {
          "type": "array",
          "items": { "type": "string" }
        },
        "observability": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["signal", "threshold", "action"],
            "additionalProperties": false,
            "properties": {
              "signal": { "type": "string" },
              "threshold": {},
              "action": { "type": "string" }
            }
          }
        },
        "driftSignals": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["signal", "method", "threshold", "action"],
            "additionalProperties": false,
            "properties": {
              "signal": { "type": "string" },
              "method": { "type": "string" },
              "threshold": {},
              "action": { "type": "string" }
            }
          }
        },
        "uxNotes": { "type": ["string", "null"] },
        "feedbackChannels": {
          "type": ["object", "null"],
          "additionalProperties": false,
          "properties": {
            "email": { "type": "string" },
            "url": { "type": "string" }
          }
        },
        "incidentReporting": {
          "type": ["object", "null"],
          "additionalProperties": false,
          "properties": {
            "url": { "type": "string" },
            "slas": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "firstResponseHrs": { "type": "number" }
              }
            }
          }
        }
      }
    },
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "title": { "type": ["string", "null"] },
        "owners": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "role"],
            "additionalProperties": false,
            "properties": {
              "name": { "type": "string" },
              "role": { "type": "string" }
            }
          }
        },
        "maturity": {
          "type": ["string", "null"],
          "enum": [null, "Ideation", "PoC", "Pilot", "Production-Shadow", "Production"]
        },
        "tags": {
          "type": "array",
          "items": { "type": "string" }
        },
        "links": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "repo": { "type": "string" },
            "demo": { "type": "string" },
            "dataset": { "type": "string" }
          }
        },
        "language": { "type": ["string", "null"] },
        "createdAt": {
          "anyOf": [
            { "$ref": "#/definitions/dateTime" },
            { "type": "null" }
          ]
        },
        "lastUpdated": {
          "anyOf": [
            { "$ref": "#/definitions/dateTime" },
            { "type": "null" }
          ]
        }
      }
    },
    "mlCore": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "problem": { "type": ["string", "null"] },
        "datasets": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name"],
            "additionalProperties": false,
            "properties": {
              "name": { "type": "string" },
              "uri": { "type": "string" },
              "license": { "type": "string" },
              "timeframe": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "start": { "$ref": "#/definitions/date" },
                  "end": { "$ref": "#/definitions/date" }
                }
              },
              "collectionMethod": { "type": "string" },
              "labeling": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "workforce": { "type": "string" },
                  "tool": { "type": "string" },
                  "guidelines": { "type": "string" }
                }
              },
              "updateCadence": { "type": "string" },
              "datasetVersion": { "type": "string" }
            }
          }
        },
        "features": {
          "type": "array",
          "items": { "type": "string" }
        },
        "baselines": {
          "type": "array",
          "items": { "type": "string" }
        },
        "qualities": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "category", "desiredDirection", "evaluationProtocol", "measures"],
            "additionalProperties": false,
            "properties": {
              "name": { "type": "string" },
              "category": {
                "type": "string",
                "enum": [
                  "predictive",
                  "calibration",
                  "fairness",
                  "robustness",
                  "reliability",
                  "safety",
                  "explainability",
                  "data_quality"
                ]
              },
              "definition": { "type": "string" },
              "rationale": { "type": "string" },
              "desiredDirection": {
                "type": "string",
                "enum": ["maximize", "minimize", "target_range"]
              },
              "sliceTaxonomyRef": { "type": "string" },
              "targets": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["slice", "operator", "threshold"],
                  "additionalProperties": false,
                  "properties": {
                    "slice": { "type": "string" },
                    "operator": { "type": "string", "enum": ["<=", ">=", "in"] },
                    "threshold": {},
                    "unit": { "type": "string" },
                    "minN": { "type": "number" },
                    "timeWindow": { "type": "string" },
                    "policyRef": { "type": "string" }
                  }
                }
              },
              "evaluationProtocol": {
                "type": "object",
                "required": ["datasetRef", "split"],
                "additionalProperties": false,
                "properties": {
                  "datasetRef": { "type": "string" },
                  "split": { "type": "string" },
                  "timeWindow": { "type": "string" },
                  "randomSeed": { "type": "number" },
                  "repeats": { "type": "number" },
                  "crossVal": { "type": "boolean" },
                  "leakageControls": {
                    "type": "array",
                    "items": { "type": "string" }
                  }
                }
              },
              "measures": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["metricName", "datasetRef", "split", "slice", "value"],
                  "additionalProperties": false,
                  "properties": {
                    "metricName": { "type": "string" },
                    "methodRef": { "type": "string" },
                    "datasetRef": { "type": "string" },
                    "split": { "type": "string" },
                    "slice": { "type": "string" },
                    "value": { "type": "number" },
                    "unit": { "type": "string" },
                    "timestamp": { "$ref": "#/definitions/dateTime" },
                    "n": { "type": "number" },
                    "ci": {
                      "type": "object",
                      "additionalProperties": false,
                      "properties": {
                        "level": { "type": "number" },
                        "lower": { "type": "number" },
                        "upper": { "type": "number" }
                      }
                    },
                    "pValue": { "type": "number", "minimum": 0, "maximum": 1 },
                    "baselineRef": { "type": "string" },
                    "delta": {
                      "type": "object",
                      "additionalProperties": false,
                      "properties": {
                        "abs": { "type": "number" },
                        "rel": { "type": "number" }
                      }
                    },
                    "runId": { "type": "string" },
                    "repoSources": {
                      "type": "array",
                      "items": { "$ref": "#/definitions/anchor" }
                    }
                  }
                }
              },
              "parityComparisons": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["metricName", "referenceGroup", "comparedGroup", "difference"],
                  "additionalProperties": false,
                  "properties": {
                    "metricName": { "type": "string" },
                    "referenceGroup": { "type": "string" },
                    "comparedGroup": { "type": "string" },
                    "difference": { "type": "number" },
                    "ratio": { "type": "number" },
                    "threshold": { "type": "number" },
                    "meetsTarget": { "type": "boolean" }
                  }
                }
              },
              "robustnessTests": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["scenario", "metricName", "value"],
                  "additionalProperties": false,
                  "properties": {
                    "scenario": { "type": "string" },
                    "perturbation": { "type": "string" },
                    "magnitude": { "type": "number" },
                    "metricName": { "type": "string" },
                    "value": { "type": "number" },
                    "unit": { "type": "string" }
                  }
                }
              },
              "explainability": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "method": { "type": "string" },
                  "coverage": { "type": "number" },
                  "stabilityScore": { "type": "number" }
                }
              },
              "status": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "meetsTarget": { "type": "boolean" },
                  "trend": { "type": "string", "enum": ["up", "down", "flat"] },
                  "trendWindow": { "type": "string" },
                  "lastReviewedAt": { "$ref": "#/definitions/dateTime" }
                }
              },
              "owner": { "type": "string" },
              "monitoringLink": { "type": "string" },
              "riskLinks": {
                "type": "array",
                "items": { "type": "string" }
              },
              "stakeholderLens": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["id", "focus"],
                  "additionalProperties": false,
                  "properties": {
                    "id": { "type": "string" },
                    "focus": { "type": "string" },
                    "highlightPaths": {
                      "type": "array",
                      "items": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        },
        "failureModes": {
          "type": "array",
          "items": { "type": "string" }
        },
        "training": {
          "type": ["object", "null"],
          "additionalProperties": false,
          "properties": {
            "framework": { "type": "string" },
            "frameworkVersion": { "type": "string" },
            "hyperparams": {
              "type": "object",
              "additionalProperties": {}
            },
            "randomSeed": { "type": "number" },
            "hardware": { "type": "string" }
          }
        },
        "artifactURIs": {
          "type": ["object", "null"],
          "additionalProperties": false,
          "properties": {
            "model": { "type": "string" },
            "dockerImage": { "type": "string" }
          }
        }
      }
    },
    "provenance": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "branch": { "type": ["string", "null"] },
        "commit": { "type": ["string", "null"], "pattern": "^[0-9a-f]{7,40}$" },
        "lastGeneratedAt": { "$ref": "#/definitions/dateTime" },
        "changelog": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["date", "summary"],
            "additionalProperties": false,
            "properties": {
              "date": { "$ref": "#/definitions/dateTime" },
              "summary": { "type": "string" },
              "by": { "type": "string" },
              "files": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["path"],
                  "additionalProperties": false,
                  "properties": {
                    "path": { "type": "string" }
                  }
                }
              },
              "runId": { "type": "string" },
              "headSha": { "type": "string" }
            }
          }
        }
      }
    },
    "stakeholderNotes": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "textMd": { "type": "string" },
          "overview": { "type": "string" },
          "changes": { "type": "string" },
          "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
          "language": { "type": "string" }
        }
      }
    }
  },
  "definitions": {
    "anchor": {
      "type": "object",
      "required": ["path", "startLine", "endLine", "commit"],
      "additionalProperties": false,
      "properties": {
        "path": { "type": "string" },
        "startLine": { "type": "integer", "minimum": 1 },
        "endLine": { "type": "integer", "minimum": 1 },
        "commit": { "type": "string", "pattern": "^([0-9a-fA-F]{7,40}|<redacted>)$" },
        "fingerprint": { "type": "string" },
        "kind": {
          "type": "string",
          "enum": ["code", "openapi", "metrics", "docs", "config", "test"]
        }
      }
    },
    "date": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "dateTime": {
      "type": "string",
      "format": "date-time"
    }
  }
}
